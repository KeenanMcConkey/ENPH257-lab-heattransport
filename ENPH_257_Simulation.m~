% ENPH_257_Data - Graph the data collected from aluminium rod

x = [0.0 6.0 12.0 18.0 24.0 30.0]; % Location of sensors

% Read data files
volt = csvread('/Users/glynfinck/Documents/Arduino/ENPH_257_LAB_Temperature_Sensor/HeatTransport_2017_5_26_16.csv',1,7, [1 7 (size(temp,1)-1) 12]);
temp = csvread('/Users/glynfinck/Documents/Arduino/ENPH_257_LAB_Temperature_Sensor/HeatTransport_2017_5_26_16.csv',1,13, [1 13 (size(temp,1)-1) 18]);

close all;
figure('Name', 'ENPH257 - Aluminium Rod Data Graph'); % Graphing data
title('Graph of Temperature At Varying Points on an Aluminium Rod');
ylim([0.0 50.0]);
xlabel('Distance x (cm)');
ylabel('Temperature T (K)');
h = animatedline; % Use animatedline function to show change in time
hold on;

conv = ones(
for n=1:size(temp,1);
    clearpoints(h);
    addpoints(h,x,temp(n,:));
    drawnow limitrate;
    pause(0.01);
end

    